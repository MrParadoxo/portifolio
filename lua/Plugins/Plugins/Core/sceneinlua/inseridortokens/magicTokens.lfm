					if ending == 0 then
						path = path .. " v " .. 1;
					else
						path = path .. " h -" .. 1;
					end;
				end;
			end;

			path = path .. " h -1";

			for i=1, reach, 1 do
				if i == 1 then
					path = path .. " h -" .. 1;
				elseif i==2 then
					path = path .. " v -" .. 1;
				else
