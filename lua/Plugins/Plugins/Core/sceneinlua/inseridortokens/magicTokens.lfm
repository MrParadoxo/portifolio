				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " h " .. 1;
					else
						path = path .. " v " .. 1;
					end;
				end;
			end;

			for i=1, reach, 1 do
				if i == 1 then
					path = path .. " v " .. 1;
				elseif i==2 then
					path = path .. " h -" .. 1;
				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " h -" .. 1;
					else
						path = path .. " v " .. 1;
					end;
				end;
			end;

			for i=reach, 1, -1 do
				if i == 1 then
					path = path .. " h -" .. 1;
				elseif i==2 then
					path = path .. " v " .. 1;
				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " v " .. 1;
					else
						path = path .. " h -" .. 1;
					end;
				end;
			end;

			for i=1, reach, 1 do
				if i == 1 then
					path = path .. " h -" .. 1;
				elseif i==2 then
					path = path .. " v -" .. 1;
				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " v -" .. 1;
					else
						path = path .. " h -" .. 1;
					end;
				end;
			end;

			for i=reach, 1, -1 do
				if i == 1 then
					path = path .. " v -" .. 1;
				elseif i==2 then
					path = path .. " h -" .. 1;
				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " h -" .. 1;
					else
						path = path .. " v -" .. 1;
					end;
				end;
			end;

			for i=1, reach, 1 do
				if i == 1 then
					path = path .. " v -" .. 1;
				elseif i==2 then
					path = path .. " h " .. 1;
				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " h " .. 1;
					else
						path = path .. " v -" .. 1;
					end;
				end;
			end;

			for i=reach, 1, -1 do
				if i == 1 then
					path = path .. " h " .. 1;
				elseif i==2 then
					path = path .. " v -" .. 1;
				else
					local ending = (i-2)%3;
					if ending == 0 then
						path = path .. " v -" .. 1;
					else
						path = path .. " h " .. 1;
					end;
				end;
			end;

			path = path .. " Z";

			self:createToken(path);
		end;

		function self:createSquare()
			local reach = tonumber(self.reachVal.text) or 1;
			local path = "M 0 0 h " .. reach .. " v " .. reach .. " h -" .. reach .. " Z";
			self:createToken(path);
		end;

		function self:createEmanacao()
			if self.rbtCellTypeVertHex.checked or self.rbtCellTypeHorzHex.checked then
				multx = 2;
				multy = 2;
				self:createCircleHex()
			else
				self:createEmanacaoQuad()
			end
		end;

		function self:createEmanacaoQuad()
			local reach = tonumber(self.reachVal.text) or 1;
			local path = "M " .. reach .. " 0";

			path = path .. " h 1";

			for i=1, reach, 1 do
				if i == 1 then
					path = path .. " h " .. 1;
				elseif i==2 then
					path = path .. " v " .. 1;
