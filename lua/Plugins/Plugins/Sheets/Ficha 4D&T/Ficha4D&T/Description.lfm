			<edit left="$(left2)" top="$(top)" width="200" height="25" field="$(field)" vertTextAlign="center" />
		</template>
		
		<rectangle left="0" top="0" width="910" height="105" color="black">
			<label left="3" top="1" width="100" height="20" text="DESCRIÇÃO"/>

			<Descricao left1="10" left2="100" top="25" text="NACIONALIDADE" field="nacionalidade" fontSize="11"/>
			<Descricao left1="10" left2="100" top="50" text="ALTURA" field="altura" fontSize="13"/>
			<Descricao left1="10" left2="100" top="75" text="PESO" field="peso" fontSize="13"/>
			
			<Descricao left1="310" left2="400" top="25" text="IDADE" field="idade" fontSize="13"/>
