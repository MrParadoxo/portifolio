			<Descricao left1="310" left2="400" top="75" text="OUTROS" field="aparenciaOutros" fontSize="13"/>
			
			<Descricao left1="610" left2="700" top="25" text="OLHOS" field="aparenciaOlhos" fontSize="13"/>
